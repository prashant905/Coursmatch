# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# The home page
GET     /                                              controllers.ChooseUser.login()
GET     /coursematch                                   controllers.ChooseUser.login()
GET     /coursematch/student                                   controllers.Application.login()
GET     /coursematch/company                                   controllers.CompanyController.login()


# Authentication
GET     /coursematch/student/login                              controllers.Application.login()
POST    /coursematch/student/login                              controllers.Application.authenticate()
GET     /coursematch/student/logout                             controllers.Application.logout()

GET 	/coursematch/student/dashboard							controllers.Application.dashboard()

GET     /coursematch/company/login                              controllers.CompanyController.login()
POST    /coursematch/company/login                              controllers.CompanyController.authenticate()
GET     /coursematch/company/logout                             controllers.CompanyController.logout()

GET 	/coursematch/company/dashboard							controllers.CompanyController.dashboard()
POST 	/coursematch/company/dashboard/saveJob					controllers.CompanyController.saveJob()
GET 	/coursematch/company/dashboard/deleteJob/:id					controllers.CompanyController.deleteJob(id:Long)
POST 	/coursematch/company/dashboard/editJob/:id					controllers.CompanyController.editJob(id:Long)
GET 	/coursematch/company/dashboard/viewToEditJob/:id		controllers.CompanyController.viewToEditJob(id:Long)


GET    /coursematch/student/course/:id                       controllers.Application.viewCourse(id:Long)

GET  /coursematch/student/rateCourse/:id                       controllers.Application.rateCourse(id:Long)
GET /coursematch/student/compareCourses                       controllers.Application.compareCourses()
GET /coursematch/student/displayCourseRatings                      controllers.Application.displayCourseRatings()
GET    /coursematch/student/course/:id/                       controllers.Application.saveComment(id:Long)

GET /coursematch/student/dashboard/                       controllers.Application.saveStudentTags()
GET /coursematch/student/course/                       controllers.Application.saveCourseTags()
POST    /coursematch/student/course/                            controllers.Application.uploadMaterial()





# Javascript routing

# Map static resources from the /public folder to the /public path
GET  /assets/*file        controllers.Assets.at(path="/public", file)

