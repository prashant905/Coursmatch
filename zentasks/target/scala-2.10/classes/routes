# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# The home page
GET     /                                   controllers.Application.login()

# Authentication
GET     /login                              controllers.Application.login()
POST    /login                              controllers.Application.authenticate()
GET     /logout                             controllers.Application.logout()

GET 	/dashboard							controllers.Application.dashboard()

GET    /course/:id                       controllers.Application.viewCourse(id:Long)

GET  /rateCourse/:id                       controllers.Application.rateCourse(id:Long)
GET /compareCourses                       controllers.Application.compareCourses()
GET /displayCourseRatings                      controllers.Application.displayCourseRatings()
GET    /course/:id/                       controllers.Application.saveComment(id:Long)

GET /dashboard/                       controllers.Application.saveStudentTags()
GET /course/                       controllers.Application.saveCourseTags()
POST    /course/                            controllers.Application.uploadMaterial()
# Javascript routing

# Map static resources from the /public folder to the /public path
GET  /assets/*file        controllers.Assets.at(path="/public", file)

